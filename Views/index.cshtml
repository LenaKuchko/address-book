@{
  Layout="Shared/_Layout.cshtml";
}
<div class="jumbotron">
  <h1>Your Address Book</h1>
</div>
@if(@Model.Count == 0)
{
  <h2>There is no contacts in the AddressBook</h2>
}
else
{
  <ul>
    @foreach(var contact in @Model)
    {
      <h3><li><a href="/contacts/@contact.GetId()">@contact.GetName()</a></li></h3>
    }
  </ul>
}
<h2><a href="/contacts/new">Create new Contact</a></h2>
<form action="/clear" method="post">
  <button type="submit" name="button">Clear Address Book</button>
</form>
